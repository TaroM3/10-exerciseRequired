<h1>Register a Product -</h1>

<form action="http://localhost:8080/api/products" method="post">
        Title: <input type="text" name="title" id="title"><br>
        Description: <input type="text" name="description" id="description"><br>
        Code: <input type="text" name="code" id="code"><br>
        Price: <input type="number" name="price" id="price"><br>
        Status: <input type="text" name="status" id="status"><br>
        Stock: <input type="number" name="stock" id="stock"><br>
        Category: <input type="text" name="category" id="category"><br>
        Thumbnails: <input type="text" name="thumbnails" id="thumbnails"><br>
        <input type="submit" id="addProduct">
</form>

<h1>Delete a Product</h1>
<form method="delete" id="deleteForm">
        Enter the Product Id: <input type="number" name="id" id="id"><br>
        <input type="submit" value="Delete" id="btn-deleteProduct">
</form>

<script src="/socket.io/socket.io.js" type="text/javascript"></script>
<script src="js/productForm.js" type="text/javascript"></script>